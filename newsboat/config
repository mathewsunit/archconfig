# Newsbeuter 2.9-6
# General ----------------------------------------
max-items 100
auto-reload yes
reload-time 30
cleanup-on-quit yes
refresh-on-startup yes
show-read-articles no
show-read-feeds no
prepopulate-query-feeds yes
feed-sort-order name
show-keymap-hint false
swap-title-and-hints false
browser firefox %u

# Podcasts
player mpv
download-path "~/podcasts/%n"
max-downloads 3

# Key bindings ----------------------------------
bind-key j next
bind-key k prev
bind-key J next-feed
bind-key K prev-feed
bind-key j down article
bind-key k up article
bind-key J next article
bind-key K prev article

# Colours ----------------------------------------
# Tempus themes
# By Protesilaos Stavrou
# https://github.com/protesilaos/tempus-themes

color background color15 color0
color info color7 color8
color article color15 color0
color listnormal color15 color0
color listfocus color8 color7
color listnormal_unread color15 color0
color listfocus_unread color8 color7
highlight article "^(Feed|Title|Author|Link|Date):.*" color7 color0

